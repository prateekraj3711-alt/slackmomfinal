# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Deepgram Configuration (for transcription)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# OpenAI Configuration (for MOM generation)
OPENAI_API_KEY=your_openai_api_key_here

# Google Drive Integration (automatic upload to Google Drive for NotebookLM sync)
# Get these values from your Google Cloud Console OAuth credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Exotel Configuration (for downloading recordings)
EXOTEL_API_KEY=your_exotel_api_key
EXOTEL_API_TOKEN=your_exotel_api_token
EXOTEL_SID=your_exotel_account_sid

# Support Number (for call direction detection)
SUPPORT_NUMBER=09631084471

# Database Configuration
DATABASE_PATH=processed_calls.db

# Rate Limiting Configuration (Built-in Server Delays)
PROCESSING_DELAY=5
MAX_CONCURRENT_CALLS=3

# Department Filter Configuration
# Only process calls from agents in these departments (comma-separated)
# Set to "ALL" to process all departments
# Examples: "CUSTOMER SUPPORT" or "CUSTOMER SUPPORT,SUPPORT CAND" or "CUSTOMER SUPPORT,EMP,EDU"
ALLOWED_DEPARTMENTS=CUSTOMER SUPPORT

# Server Configuration
PORT=8000

